{
  "name": "@natlibfi/melinda-record-match-validator",
  "version": "3.0.1-alpha.5",
  "description": "Validates if two records matched by melinda-record-matching can be merged and sets merge priority",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NatLibFi/melinda-record-match-validator.git"
  },
  "keywords": [
    "Melinda",
    "Marc",
    "Merge"
  ],
  "author": "The National Library of Finland",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/NatLibFi/melinda-record-match-validator/issues"
  },
  "homepage": "https://www.npmjs.com/package/@natlibfi/melinda-record-match-validator",
  "engines": {
    "node": ">=22"
  },
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prepare": "npm run build",
    "cli": "node dist/cli.js",
    "lint": "eslint src",
    "lint:dev": "eslint --fix src",
    "build": "esbuild \"src/**/*.js\" --sourcemap --platform=node --outdir=dist",
    "test:base": "node --test --test-force-exit --experimental-test-coverage --test-reporter=spec './test/**/*.test.js'",
    "test:base:only": "node --test --test-only --test-force-exit --experimental-test-coverage --test-reporter=spec './test/**/*.test.js'",
    "test:dev:collect": "npm run lint:dev && DEBUG='@natlibfi/*' npm run test:base -- test/collectRecordValues.spec.js",
    "test:dev:compare": "npm run lint:dev && DEBUG='@natlibfi/*' npm run test:base -- test/compareRecordValues.spec.js",
    "dev:test": "cross-env DEBUG=@natlibfi/* NODE_ENV=test node --watch --test --experimental-test-coverage --test-reporter=spec './test/**/*.test.js'",
    "test": "npm run lint && npm run test:base"
  },
  "dependencies": {
    "@natlibfi/marc-record": "^10.0.1",
    "@natlibfi/melinda-commons": "^14.0.1",
    "debug": "^4.4.3",
    "isbn3": "^2.0.1",
    "moment": "^2.30.1"
  },
  "devDependencies": {
    "@natlibfi/fixugen": "^3.0.0",
    "@natlibfi/fixura": "^4.0.0",
    "cross-env": "^10.1.0",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1"
  }
}
